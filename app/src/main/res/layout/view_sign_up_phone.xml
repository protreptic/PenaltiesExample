<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/sign_up_country"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:gravity="center_vertical"
        android:ellipsize="end"
        android:inputType="text"
        android:paddingEnd="56dp"
        android:paddingStart="3dp"
        android:singleLine="true"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/ripple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Russian Federation" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/sign_up_country_flag"
        android:layout_width="38dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/sign_up_country"
        app:layout_constraintEnd_toEndOf="@+id/sign_up_country"
        app:layout_constraintTop_toTopOf="@+id/sign_up_country" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/sign_up_country_code"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:inputType="phone"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_country"
        tools:text="+7" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/sign_up_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:inputType="phone"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sign_up_country_code"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_country" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/sign_up_explanations"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/sign_up_explanations"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_country_code" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/sign_up_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/confirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_explanations" />
</android.support.constraint.ConstraintLayout>