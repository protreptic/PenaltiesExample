<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="2dp"
        app:cardCornerRadius="4dp"
        app:layout_behavior="test.p00.presentation.auxiliary.SearchBarBehavior">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/vCountriesFilter"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@null"
            android:padding="8dp"
            android:hint="@string/search" />
    </android.support.v7.widget.CardView>

    <test.p00.presentation.auxiliary.widget.StatefulRecyclerView
        android:id="@+id/vCountries"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/confirm_background"
        android:scrollbars="none" />
</android.support.design.widget.CoordinatorLayout>